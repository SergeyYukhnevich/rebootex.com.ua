    <div class="banner-text">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title"><%= __('banner.title') %></h1>
                    <h2 class="subtitle"><%= __('banner.subtitle') %></h2>
                    <p><%= __('banner.description') %></p>
                    <a class="btn get-doctor btn-lg" href="#get-doctor" role="button"><%= __('call_doctor') %></a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="quick-contacts">
    <div class="container">
        <ul class="list-inline">
            <% for(social in socials) { %>
                <li class="social hidden-xs <%= social %>">
                    <a href="<%= socials[social] %>" target="_blank"><i class="fa fa-<%= social %>"></i></a>
                </li>
            <% } %>
            <% phones.forEach(phone => { %>
                <li class="hidden-xs">
                    <a href="tel:<%= phone.replace(/[\s\+]/g, '') %>"><i class="fa fa-phone"></i> <%= phone %></a>
                </li>
            <% }); %>
            <li class="hidden-xs">
                <a href="mailto:<%= email %>"><i class="fa fa-envelope-o"></i> <%= email %></a>
            </li>
            <% locales.forEach(locale => { %>
                <li class="language">
                    <a href="/<%= locale %>"><img src="/img/<%= locale %>.png" alt="<%= locale %>"></a>
                </li>
            <% }); %>
        </ul>
    </div>
</section>
